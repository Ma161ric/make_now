{
  "name": "make-now",
  "version": "0.0.1",
  "description": "AI-powered day planner with local-first storage",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @make-now/web",
    "test": "npm run test:once --workspaces",
    "test:once": "npm run test:once --workspaces",
    "test:watch": "npm run test --workspaces",
    "build": "npm run build -w @make-now/web && npm run build -w @make-now/core",
    "build:prod": "NODE_ENV=production npm run build",
    "preview": "npm run preview -w @make-now/web",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/node": "^2.3.0",
    "eslint": "^8.57.0",
    "groq-sdk": "^0.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "vite": "7.3.1"
  }
}
